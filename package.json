{
  "name": "bearbricks-backend",
  "version": "1.0.0",
  "description": "BE@RBRICK Crowd-Sourced Pricing Engine - Node/Express/Prisma (no TypeScript)",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "postinstall": "prisma generate",
    "migrate": "npx prisma migrate dev",
    "migrate:deploy": "npx prisma migrate deploy",
    "db:seed": "node prisma/seed.js",
    "worker:enrich": "node src/scripts/enrich-votes.js",
    "worker:aggregate": "node src/scripts/aggregate-prices.js",
    "worker:snapshot": "node src/scripts/snapshot.js",
    "worker:loop": "node scripts/worker-loop.js",
    "inspect": "node scripts/inspect-db.js",
    "reset:cursors": "node scripts/reset-cursors.js",
    "reset:credits": "node scripts/reset-credits.js",
    "test:flow": "node scripts/test-full-flow.js",
    "test:logic": "node scripts/test-all-logic.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:api": "jest --testPathPattern=api"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "prisma": "^5.7.0",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18"
  }
}
